run_type,CRITERIA
AQM,CAMx
output,VOC
splits_out,$OUTDIR/gspro.CB7_cf2_criteria.CAMx.$TODAY.txt
cnv_out,$OUTDIR/gscnv.CB7_cf2_criteria.CAMx.$TODAY.txt
IEOF

perl $SPTOOL_SRC_HOME/run_sptool.pl $SPTOOL_DB camx_cb7_cf2_criteria RUNCTL >& log.CAMx.CB7_cf2_criteria.$TODAY
